# Docker Compose Environment Variables
# Copy this file to .env and update the values

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-secret-in-production-please-use-random-string

# Optional: Override default ports
# BACKEND_PORT=3000
# FRONTEND_PORT=5173

# Frontend URL (used for generating test links)
FRONTEND_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:3000/api

# SMTP Configuration (for email notifications)
# For Gmail: Use app-specific password (not regular password)
# To create app password: Google Account -> Security -> 2-Step Verification -> App passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM_EMAIL=noreply@nocturnal.health
SMTP_FROM_NAME=Nocturnal Surveys
